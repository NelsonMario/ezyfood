<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:outlineAmbientShadowColor="@android:color/background_dark"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/iv_orderedThumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/roundimage"
            android:maxWidth="100dp"
            android:maxHeight="100dp" />

        <TextView
            android:id="@+id/tv_orderedStuff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_orderedStuff_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_orderedStuff_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/et_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:gravity="center"
                android:hint="Input Quantity"
                android:layout_marginHorizontal="50dp"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/btn_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Buy"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>